{% extends 'base.html.twig' %}

{% block title %}Modifier votre mot de passe{% endblock %}

{% block main %}
  <div class="container">
    
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="bg-dark bg-gradient rounded-3 text-white p-5">
            <p class="text-center pb-5 fw-bold">Entrez votre adresse e-mail et nous vous enverrons un lien pour r√©initialiser votre mot de passe.</p>
            {{ form_start(requestForm) }}
                {{ form_label(requestForm.email, 'Votre adresse email', {'label_attr': {'class': 'text-white , mb-3'}}) }}
                {{ form_widget(requestForm.email) }}           
                <button class="btn mt-5 text-center " class="col-6">Envoyer</button>
            {{ form_end(requestForm) }}
        </div>
        
  </div>
{% endblock %}