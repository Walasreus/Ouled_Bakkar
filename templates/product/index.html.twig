{% extends 'base.html.twig' %}

{% block title %}Nos produits - Ouled Bakkar {% endblock %}

{% block content %}
    <div class="container products">
        <h2 class="text-center">Notre carte</h2>
        <div class="row ">
            {% for product in products %}
                    <div class="col-md-3 mb-5">
                        <div class="wsk-cp-product">
                            <div >
                                <img src="{{asset('/assets/uploads/products/' ~ product.image )}}" alt="Product" class="img-fluid" />
                            </div>
                            <div class="wsk-cp-text">
                                <div class="category mt-5">
                                    <span>
                                        
                                        {% for category in product.category %}
                                            <span>|</span>
                                                {{category.name}}
                                            <span>|</span>
                                    
                                        {% endfor %}
                                    </span>
                                </div>
                                <div class="title-product">
                                    <h3>{{ product.name }}</h3>
                                </div>
                                <div class="description-prod">
                                    <p>{{ product.description }}</p>
                                        {% if app.user %}   
                                                   
                                                    
                                        {% endif %}
                                </div>
                                <div class="card-footer">
                                    <div class="wcf-left"><span class="price">{{ (product.price / 100) |number_format(2, ',', '.') }} â‚¬</span></div>
                                    <div class="wcf-right"><a href="" class="buy-btn"><i class="bi bi-cart-plus"></i></a></div>
                                </div>
                            </div>
                            <a href="">Voir le produit</a>
                        </div>
                    </div>     
            {% endfor %}
            
        </div>  
          
    </div>
{% endblock %}
{% block footer %}
    {{parent()}}
{% endblock  %}


