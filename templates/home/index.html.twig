{% extends 'base.html.twig' %}

{% block carousel %}{% endblock %}

{% block content %}

        <div class="row produit ">
          <h2 class="text-center ">Nos produits - Ouled Bakkar</h2>
            {% for product in products %}        
           <div class="col-lg-4 ">
              <div class="card">
                <div class="imgBox d-flex justify-content-center align-items-center">
                  <img class=" mouse" src="{{ asset('assets/image/products/'~ product.image) }}"
                  alt="Card image cap" />
                </div>
                <div class="contentBox">
                  <h3>{{product.name}}</h3>
                  <h2 class="price">  <span>{{ (product.price / 100) |number_format(2, ',', '.') }} €</span></h2>
                  <a href="#" class="buy">Acheter</a>
                </div>
              
              </div>     
           </div>   
          {% endfor %}
        </div><!-- /.row -->
        <hr class="featurette-divider">

        <div class="row article">
          <h2 class="text-center">Nos articles - Ouled Bakkar</h2>
          {% for article in articles %}
          <div class="col-lg-4 col-md-12 d-flex flex-column justify-content-start align-items-center bg-white border-3 rounded-3 mt-5">
            <img src="{{ asset('assets/image/articles/'~ article.image)}}" alt="Image de " ~ {{ article.title}} class="d-flex img-fluid ">

            <div class=" d-flex flex-column justify-content-between align-items-center">   
              <h3 class="text-center mb-2">{{ article.title|upper }}</h3>
              <p class="text-center"> {{article.content}}</p>
              <p class="date">Ecrit le <span>{{ article.createdAt|date('d-m-Y') }}</span> à <span>{{ article.createdAt|date('H:i') }}</span></p>
              <a href="{{ path('show', {'id': article.id })}}" class="btn mb-2">Lire</a>
            </div>
          </div>
          {% endfor %}
        </div>

        <hr class="featurette-divider">

        <!-- /END THE FEATURETTES -->
{% endblock %}